# WriteBot Production Configuration Example
# Copy this file to .env and update with your production values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False

# Database Configuration
# For SQLite (simple deployments):
# DATABASE_URL=sqlite:///instance/writebot.db
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://username:password@localhost:5432/writebot

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Gunicorn Configuration (production server)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120

# Security
# Generate a new secret key with: python -c 'import secrets; print(secrets.token_hex(32))'
# For deployment, use a strong random key and keep it secret

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379

# Caching
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file upload
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Deployment Info
DEPLOY_ENVIRONMENT=production
APP_VERSION=1.0.0

# Email Configuration (Flask-Mailman)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_USE_TLS=true
MAIL_DEFAULT_SENDER=writebot@example.com

# Job Queue Configuration
JOB_RETENTION_DAYS=30
JOB_FILES_DIR=./job_storage

# Redis for Celery (job queue)
REDIS_URL=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=
FLOWER_PORT=5555
